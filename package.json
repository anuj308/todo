{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "MERN Todo Application",
  "type": "module",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    
    "client:install": "cd client && npm install",
    "server:install": "npm install",
    "install-all": "npm install && npm run client:install",
    
    "client:build": "cd client && npm run build",
    "build": "npm run install-all && npm run client:build",
    
    "vercel-build": "npm run install-all && npm run client:build && cp -r server ./dist/server",
    "vercel-deploy": "vercel --prod",
    
    "amplify-build": "npm run install-all && npm run client:build && cp -r server ./dist/server",
    "amplify-deploy": "amplify publish",
    
    "eb-build": "npm run install-all && npm run client:build",
    "eb-deploy": "eb deploy",
    
    "prod": "node server/server.js",
    
    "debug-build": "npm run install-all && npm run client:build && ls -la client/dist",
    "clean": "rm -rf node_modules client/node_modules client/dist",
    "reinstall": "npm run clean && npm run install-all",
    "list-env": "printenv",
    "check-dirs": "find . -type d -not -path \"*/node_modules/*\" -not -path \"*/.git/*\" | sort"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "todo",
    "mern",
    "mongodb",
    "express",
    "react",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
