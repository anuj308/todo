{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "MERN Todo App",
  "type": "module",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    
    "client:build": "cd client && npx vite build",
    "client:install": "cd client && npm install",
    
    "server:install": "npm install",
    
    "install-all": "npm install && npm run client:install",
    
    "build": "npm run install-all && npm run client:build",
    
    "vercel-build": "npm run install-all && npm run client:build && npm run vercel-postbuild",
    "vercel-postbuild": "mkdir -p client/dist && cp -r client/dist/* client/dist/",
    
    "debug-build": "npm run install-all && npm run client:build && ls -la client/dist",
    "debug-vercel": "echo 'Current directory:' && pwd && echo 'Directory contents:' && ls -la"
  },
  "keywords": [
    "todo",
    "mern",
    "vite",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
